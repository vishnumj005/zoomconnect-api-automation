pipeline {
  agent any
  stages {
    stage('Run Tests') {
      steps {
        bat "behave -f allure_behave.formatter:AllureFormatter -o allure-results"
      }
    }
  }
  post('Post Operations'){
        always{
            script {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: '$WORKSPACE/allure-results']]

                ])
            }
        }
  }
}